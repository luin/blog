---
export interface Props {
  lang?: string;
  title?: string;
  description?: string;
  permalink?: string;
}

import BaseHead from "component:BaseHead";
import BaseBody from "component:BaseBody";
import config from "config";

const { lang, title, description, permalink } = Astro.props;
---

<html lang={lang || config.lang}>
  <head>
    <BaseHead {title} {description} {permalink} />
  </head>
  <BaseBody>
    <slot />
  </BaseBody>
</html>
