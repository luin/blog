---
import config from "config";
---

<aside class="banner">
  <h2>{config.name}</h2>
  <p class="description">{config.description}</p>
  <nav>
    <a href="/feed.xml">RSS</a>
    {config.nav.map(({ title, link }) => <a href={link}>{title}</a>)}
  </nav>
  {config.twitter || config.github ? (
    <div class="social">
      {config.github && (
        <a class="github" href={`https://github.com/${config.github}`}>
          <img src="/assets/github.svg" width="20" />
        </a>
      )}
      {config.twitter && (
        <a class="twitter" href={`https://twitter.com/${config.twitter}`}>
          <img src="/assets/twitter.svg" width="20" />
        </a>
      )}
    </div>
  ) : null}
</aside>

<style lang="scss">
  .banner {
    position: relative;
    background: rgba(0, 0, 0, 0.04);
    border-radius: 10px;
    margin-top: 2em;
    padding: 1em 1em;

    :global(nav a) {
      margin-right: 1em;
    }

    .social {
      display: flex;
      position: absolute;
      right: 1em;
      top: 1em;
      margin: 0;
      align-items: center;

      :global(img) {
        display: inline;
        margin: 0;
        margin-left: 0.6em;
      }
    }

    :global(h2) {
      margin: 0;
      font-size: 1.1em;
    }

    .description {
      margin-top: 0;
      color: var(--color-muted);
      font-size: 0.8em;
    }
  }
</style>
