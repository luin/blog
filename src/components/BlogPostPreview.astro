---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article class="post-preview">
  <header>
    <p class="publish-date">{post.publishDate}</p>
    <a href={post.path}><h1 class="title">{post.title}</h1></a>
  </header>
  <p>{post.description}</p>
  <a class="read-more" href={post.path}>阅读更多</a>
</article>

<style>
  .post-preview {
    padding-bottom: 2rem;
    margin-bottom: 2rem;
    border-bottom: 4px solid var(--theme-divider);
  }

  header {
    align-items: flex-start;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 1em;
    text-align: left;
  }

  .title,
  .author,
  .publish-date {
    margin: 0;
  }

  .publish-date,
  .author {
    font-size: 1em;
    color: var(--theme-text-lighter);
  }

  .title {
    font-size: 1.6em;
    font-weight: 700;
    color: var(--theme-text);
  }

  .read-more {
    display: inline-block;
    margin-top: 1em;
  }
</style>
